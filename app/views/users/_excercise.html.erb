<div class="well">
    <% if excercise.is_pause? %>
        <%= label_tag 'program[excercises][][name]', 'Do you need a pause?' %>
        <%= select_tag 'program[excercises][][name]', options_for_select([[ excercise.name, excercise.name ]]), include_blank: t('No pause'), class: 'excercise-name form-control' %>
    <% else %>
        <%= label_tag 'program[excercises][][name]', 'Select an excercise:' %>
        <%= select_tag 'program[excercises][][name]', options_for_select(@excercise_presets, excercise.name), include_blank: t('Select an excercise'), class: 'excercise-name form-control' %>
    <% end %>

    <% unless excercise.is_pause? %>
        <%= label_tag 'program[excercises][][repetitions]', 'Repeat:' %>
        <%= select_tag 'program[excercises][][repetitions]', options_for_select(@repetitions, excercise.repetitions), include_blank: t('Repetitions'), class: 'excercise-repetitions form-control' %>

        <div class="sixteen wide column">OR</div>
    <% else %>
        <%= hidden_field_tag 'program[excercises][][repetitions]', '' %>
    <% end %>

    <%= label_tag 'program[excercises][][repetitions]', 'Choose duration:' %>
    <%= select_tag 'program[excercises][][duration]', options_for_select(@durations.map { |secs| [ t(Time.humanize_timespan(secs)), secs ] }, excercise.duration), include_blank: t('Duration'), class: 'excercise-duration form-control' %>
</div>
